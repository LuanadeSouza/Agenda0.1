<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/formulario_foto"
            android:layout_width="0dp"
            android:layout_height="258dp"
            android:background="#00A8EC"
            android:src="@drawable/person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/formulario_botao_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:src="@drawable/ic_camera"
            app:backgroundTint="#ff0000"
            app:layout_constraintBottom_toTopOf="@+id/formulario_nome"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/formulario_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/nome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_foto" />

        <EditText
            android:id="@+id/formulario_endereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/endere_o"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_nome" />

        <EditText
            android:id="@+id/formulario_telefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/telefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_endereco" />

        <EditText
            android:id="@+id/formulario_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/site"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_telefone" />

        <RatingBar
            android:id="@+id/formulario_nota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:max="10"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_site" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>